{
  "manifest_version": 3,
  "name": "Salesforce CRM Data Extractor",
  "version": "0.1",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/constants.js",
        "content/utils.js",
        "content/extractors.js",
        "content/ui.js",
        "content/index.js"
      ]
    }
  ]
}
